<%- include('layouts/header') -%>
<link rel="stylesheet" href="../css/avatarStyle.css">
<script src="../js/profileUser.js"></script>

<div class="container-fluid" style="height: 100vh; position: fixed;">
    <div class="row full-height">
        <div class="col-12 col-md-4" style="background-color: aqua;">
            <p>Thông tin tài khoản</p>
            <div class="avatar-wrapper">
                <img class="profile-pic" src="" />
                <div class="upload-button">
                    <i class="fa fa-arrow-circle-up" aria-hidden="true"></i>
                </div>
                <input class="file-upload" type="file" accept="image/*"/>
            </div>
            <p>Tên: <%=user.fullname %> </p>
            <p>Email: <%=user.email %> </p>
        </div>
        <div class="col-12 col-md-4">
            <table class="table">
                <thead>
                    <tr>
                        <th class="text-center" scope="col" colspan="3">Danh sách bạn bè</th>
                    </tr>
                </thead>
                <tbody>
                    <% user.list_friends.forEach(element => { %>
                        <tr class="align-middle">
                            <td>
                                <div class="avatar-circle">
                                    <span class="avatar-initials">A</span>
                                </div>
                            </td>
                            <td><%= element.fullname %> </td>
                            <td>
                                <a class="btn btn-success btn-sm" href="/call" role="button">Gọi</a>
                                <button onclick="addFriend(this)" type="button" class="btn btn-danger btn-sm">Hủy kết bạn</button>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
        <div class="col-12 col-md-4" style="background-color: burlywood;">
            <table class="table">
                <thead>
                    <tr>
                        <th class="text-center" scope="col" colspan="3">Gợi ý kết bạn</th>
                    </tr>
                </thead>
                <tbody>
                    <% list_suggest.forEach(element => { %>
                        <% if (element.id != user.id) { %>
                            <tr class="align-middle">
                                <td>
                                    <div class="avatar-circle">
                                        <span class="avatar-initials">A</span>
                                    </div>
                                </td>
                                <td><%= element.fullname %> </td>
                                <td><button onclick="addFriend(this)" type="button" class="btn btn-secondary btn-sm">Kết bạn</button></td>
                            </tr>
                        <% } %>
                    <% }) %>      
                </tbody>
            </table>
        </div>
    </div>
</div>

<%- include('layouts/footer') -%>