<!doctype html>
<html lang="en">
<head>
  	<title>Đăng Ký</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
	<link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <link rel="stylesheet" href="../css/style.css">
    <script src="../js/auth.js"></script>
</head>

<body id="login-body">
	<section>
		<div class="container">
            <div class="position-absolute top-50 start-50 translate-middle w-75">
                <div class="row justify-content-center">
                    <div class="col-md-6 text-center mb-2">
                        <h2 class="login-heading-section">Đăng Ký</h2>
                    </div>
                </div>
                <div class="row justify-content-center">
                    <div class="col-md-6 col-lg-4">
                        <div class="login-wrap p-0">
                            <form id="register-form" method="POST">
                                <div class="form-group mb-2">
                                    <input <% if (fullname != '') { %> value = "<%= fullname %>" <% } %> id="fullname" name="fullname" type="text" class="form-control login-form-control" placeholder="Họ và tên" >
                                </div>
                                <div class="form-group mb-2">
                                    <input <% if (username != '') { %> value = "<%= username %>" <% } %> id="username" name="username" type="text" class="form-control login-form-control" placeholder="Tên đăng nhập" >
                                </div>
                                <div class="form-group mb-2">
                                    <input <% if (email != '') { %> value = "<%= email %>" <% } %> id="email" name="email" type="text" class="form-control login-form-control" placeholder="Email" >
                                </div>
                                <div class="form-group mb-2">
                                    <input name="password" id="password" type="password" minlength="8" class="form-control login-form-control" placeholder="Mật khẩu" >
                                </div>
                                <div class="form-group mb-2">
                                    <input name="confirm_password" id="confirm-password" minlength="8" type="password" class="form-control login-form-control" placeholder="Xác nhận mật khẩu" >
                                </div>
                                <div class="form-group mb-2">
                                    <button type="submit" class="form-control btn btn-primary submit px-3">Đăng ký</button>
                                </div>
                            </form>
                            <p class="w-100 text-center mb-2">&mdash; Hoặc đăng nhập bằng &mdash;</p>
                            <div class="social d-flex text-center mb-2">
                                <a href="/auth/facebook" class="btn btn-facebook px-2 py-2 me-1 rounded">Facebook</a>
                                <a href="/auth/google" class="btn btn-google px-2 py-2 ms-1 rounded">Google</a>
                            </div>
                            <div class="text-end mb-2">
                                <a href="/auth/login">Đăng nhập</a>
                            </div>
                            <% if (error.length > 0) { %>
                                <div class="alert alert-danger" role="alert">
                                    <p class="text-center"><%= error %> </p>
                                </div>
                            <% } %>
                            <% if (success != '') { %>
                                <div class="alert alert-success" role="alert">
                                    <p class="text-center"><%= success %> </p>
                                </div>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
		</div>
	</section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
</body>
</html>

